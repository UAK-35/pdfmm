#ifndef PDFMM_FORMAT_H
#define PDFMM_FORMAT_H

// Define FMT_FORMAT_H externally to force a difference location for {fmt}
#ifndef FMT_FORMAT_H
#define FMT_FORMAT_H "fmt/format.h"
#endif

#define FMT_HEADER_ONLY
#include FMT_FORMAT_H

namespace mm
{
	inline std::string Format(const std::string_view& str)
	{
		return (std::string)str;
	}

	inline std::string Format(const char* str)
	{
		return str;
	}

	inline std::string Format(const std::string& str)
	{
		return str;
	}

	inline std::string Format(std::string&& str)
	{
		return std::move(str);
	}

	template <typename... Args>
	inline std::string Format(const std::string_view& fmt, const Args&... args)
	{
		return fmt::format(fmt, args...);
	}
}

#endif // PDFMM_FORMAT_H
