#ifndef COMPAT_OPTIONAL_H
#define COMPAT_OPTIONAL_H

#ifdef HAVE_STD_EXPERIMENTAL_OPTIONAL

// Small shim to include experimental <optional> header
#include <experimental/optional>

namespace std
{
    using namespace experimental;
}

#else // HAVE_STD_EXPERIMENTAL_OPTIONAL
#include <optional>
#endif // HAVE_STD_EXPERIMENTAL_OPTIONAL

#endif // COMPAT_OPTIONAL_H
